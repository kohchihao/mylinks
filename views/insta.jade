extends layout

block content
  doctype html
  html(lang='en')
    head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
      title
      link(rel='stylesheet', type='text/css', href='css/reset.css')
      link(rel='stylesheet', href='font-awesome/css/font-awesome.min.css')
      link(rel='stylesheet', href='css/bootstrap.min.css')
      style.
        #user-info{
        text-align: center;
        font-size: 16px;
        margin-top: 2.5em;
        }
        #user-image{
        margin-bottom: 3rem;
        }
        #user-image img{
        width: 45%;
        border-radius: 50%;
        }
        #username{
        font-weight: 700;
        font-size: 18px;
        margin-bottom: 1.75em;
        }
        .group{
        width: 90%;
        margin: 2rem auto;
        text-align: center;
        background-color: rgb(250, 250, 250);
        padding: 1.25rem 0;
        border-radius: 3px;
        }
        .title{
        font-weight: 700;
        font-size: 17px;
        }
    body
      section#user-info
        #user-image
          img(alt='User Image', src= data.user.profile_picture)
        #username
          | @
          span#name= data.user.username
      section#user-links
        each val in data.links
          .group
            p.title= val.url_title
            p
              a.link(href= val.url_link)= val.url_link
        
      script(src='js/jquery-3.1.1.min.js', type='text/javascript')
      script(src='js/bootstrap.min.js', type='text/javascript')
      script(src='js/index_html.js', type='text/javascript')
